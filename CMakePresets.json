{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "linux-config-dev",
            "displayName": "Linux - Debug",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/dev",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}",
                "CPM_SOURCE_CACHE": "${sourceDir}/.cache/CPM",
                "RTYPE_BUILD_TESTS": "ON",
                "RTYPE_WERROR": "OFF",
                "BUILD_SHARED_LIBS": "OFF"
            }
        },
        {
            "name": "linux-config-release",
            "displayName": "Linux - Release",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}",
                "CPM_SOURCE_CACHE": "${sourceDir}/.cache/CPM",
                "RTYPE_BUILD_TESTS": "OFF",
                "RTYPE_WERROR": "OFF",
                "BUILD_SHARED_LIBS": "OFF"
            }
        },
        {
            "name": "windows-config-dev",
            "displayName": "Windows - Debug",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build/windows-dev",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}",
                "CPM_SOURCE_CACHE": "${sourceDir}/.cache/CPM",
                "CMAKE_PREFIX_PATH": "C:/vcpkg/installed/x64-windows",
                "BUILD_SHARED_LIBS": "OFF"
            },
            "toolchainFile": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "windows-config-release",
            "displayName": "Windows - Release",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build/windows-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}",
                "CPM_SOURCE_CACHE": "${sourceDir}/.cache/CPM",
                "RTYPE_BUILD_TESTS": "OFF",
                "RTYPE_WERROR": "OFF",
                "BUILD_SHARED_LIBS": "OFF"
            },
            "toolchainFile": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake"
        }
    ],
    "buildPresets": [
        {
            "name": "linux-build-dev",
            "configurePreset": "linux-config-dev",
            "displayName": "Build Linux Debug",
            "jobs": 8,
            "configuration": "Debug"
        },
        {
            "name": "linux-build-release",
            "configurePreset": "linux-config-release",
            "displayName": "Build Linux Release",
            "jobs": 8,
            "configuration": "Release"
        },
        {
            "name": "windows-build-dev",
            "configurePreset": "windows-config-dev",
            "displayName": "Build Windows Debug",
            "configuration": "Debug",
            "jobs": 8
        },
        {
            "name": "windows-build-release",
            "configurePreset": "windows-config-release",
            "displayName": "Build Windows Release",
            "configuration": "Release",
            "jobs": 8
        }
    ]
}
